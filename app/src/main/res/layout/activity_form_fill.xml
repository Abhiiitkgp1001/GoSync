<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EFEF"
    android:orientation="vertical"
    tools:context=".FormFillActivity">

    <TextView
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="monospace"
        android:text="Fill Response"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/member_id_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/round_grey"
            android:hint="Member ID"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="#7E7A7A"
            android:textSize="14sp"></TextView>

        <EditText
            android:id="@+id/mem_id"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/round_grey"
            android:hint="Your ID"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="#7E7A7A"
            android:textSize="14sp"></EditText>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearLayout_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/Response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:background="@drawable/round_grey"
        android:text=" Save Response"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp">

    </Button>

</LinearLayout>